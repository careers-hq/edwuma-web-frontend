# Environment Configuration Template for Edwuma Frontend
# Copy this file to .env.production and update the values

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PORT=3000
HOSTNAME=0.0.0.0

# API Configuration
NEXT_PUBLIC_API_URL=https://api.edwuma.com
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXTAUTH_URL=https://edwuma.com
NEXTAUTH_SECRET=your-nextauth-secret-here

# Database (if using direct database connection)
DATABASE_URL=postgresql://username:password@localhost:5432/edwuma

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# External Services
JOB_DATA_API_URL=https://jobdataapi.com
JOB_DATA_API_KEY=your-job-data-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@edwuma.com

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=info

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_DEBUG=false
ENABLE_MAINTENANCE_MODE=false

# CDN Configuration
CDN_URL=https://cdn.edwuma.com
ASSETS_URL=https://assets.edwuma.com

# Social Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Payment Integration (if applicable)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# SEO
SITE_NAME=Edwuma
SITE_DESCRIPTION=Find your dream job in Africa
SITE_URL=https://edwuma.com
SITE_IMAGE=https://edwuma.com/og-image.jpg

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Development/Testing
NODE_OPTIONS=--max-old-space-size=4096
